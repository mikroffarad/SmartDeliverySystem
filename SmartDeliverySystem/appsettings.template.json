{
    "ConnectionStrings": {
        "DefaultConnection": "Server=your-server;Database=SmartDeliveryDb;Trusted_Connection=true;MultipleActiveResultSets=true;Encrypt=False;",
        "ServiceBus": "Endpoint=sb://your-servicebus.servicebus.windows.net/;SharedAccessKeyName=RootManageSharedAccessKey;SharedAccessKey=your-key",
        "AzureStorage": "DefaultEndpointsProtocol=https;AccountName=your-storage;AccountKey=your-key;EndpointSuffix=core.windows.net"
    },
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*"
}

// "DefaultConnection" string is your SQL Server DbConnection string

// How to get "ServiceBus":
// 1. Go to Service Bus Namespace (smart-delivery-bus)
// 2. Left-side panel: Settings => Shared access policies
// 3. Select policy (RootManageSharedAccessKey)
// 4. Copy Primary connection string

// How to get "AzureStorage":
// 1. Go to Storage account (smartdeliverystorage)
// 2. Left-side panel: Security + networking => Access keys
// 3. From key1 copy Connection string